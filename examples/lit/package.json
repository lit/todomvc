{
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "wireit",
    "build": "wireit",
    "esbuild": "wireit"
  },
  "devDependencies": {
    "@web/dev-server": "^0.2.1",
    "esbuild": "^0.18.3",
    "todomvc-app-css": "^2.4.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "lit": "^3.0.0-pre.0",
    "tslib": "^2.5.2"
  },
  "wireit": {
    "serve": {
      "dependencies": [
        "build", "esbuild"
      ],
      "files": [
        "web-dev-server.config.js"
      ],
      "service": true,
      "command": "wds"
    },
    "build": {
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "index.js",
        "index.js.map",
        "lib",
        ".tsbuildinfo"
      ],
      "clean": false,
      "command": "tsc"
    },
    "esbuild": {
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "esbuild/index.js"
      ],
      "command": "esbuild --target=es2022 src/index.ts --bundle --minify --outfile=esbuild/index.js"
    }
  }
}
